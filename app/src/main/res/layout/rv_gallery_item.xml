<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView android:layout_width="match_parent"
               android:background="@android:color/darker_gray"
               tools:src="@drawable/ic_launcher_foreground"
               android:scaleType="centerInside"
               android:minHeight="@dimen/rv_gallery_min_height"
               android:layout_alignParentTop="true"
               android:id="@+id/rv_gallery_item_iv"
               android:layout_height="wrap_content"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_below="@id/rv_gallery_item_iv"
                    android:paddingStart="@dimen/rv_gallery_item_padding_horizontal"
                    android:paddingEnd="@dimen/rv_gallery_item_padding_horizontal"
                    android:layout_height="@dimen/rv_gallery_description_height">
        <TextView android:layout_width="wrap_content"
                  tools:text="alice"
                  android:layout_alignParentStart="true"
                  android:id="@+id/rv_gallery_item_name_tv"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  tools:text="7 likes"
                  android:layout_alignParentEnd="true"
                  android:id="@+id/rv_gallery_item_likes_tv"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>